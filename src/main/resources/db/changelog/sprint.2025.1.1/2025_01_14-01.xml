<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="2025-01-14-01" author="p.vydysh">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="poll"/>
            </not>
        </preConditions>
        <createTable tableName="poll"
                     remarks="Информация об опросе">
            <column name="poll_id"
                    type="UUID"
                    remarks="Идентификатор опроса">
                <constraints primaryKey="true"/>
            </column>

            <column name="title"
                    type="TEXT"
                    remarks="Заголовок опроса">
                <constraints nullable="false"/>
            </column>

            <column name="description"
                    type="TEXT"
                    remarks="Описание опроса">
                <constraints nullable="true"/>
            </column>

            <column name="creator_id"
                    type="TEXT"
                    remarks="Идентификатор создателя опроса">
                <constraints nullable="false"/>
            </column>

            <column name="creator_full_name"
                    type="TEXT"
                    remarks="ФИО создателя опроса">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2025-01-14-02" author="p.vydysh">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="poll_version"/>
            </not>
        </preConditions>
        <createTable tableName="poll_version"
                     remarks="Информация о версии опроса">
            <column name="poll_version_id"
                    type="UUID"
                    remarks="Идентификатор версии">
                <constraints primaryKey="true"/>
            </column>

            <column name="poll_id"
                    type="UUID"
                    remarks="Идентификатор опроса">
                <constraints nullable="false"/>
            </column>

            <column name="version_number"
                    type="INTEGER"
                    remarks="Номер версии">
                <constraints nullable="false"/>
            </column>

            <column name="creation_date"
                    type="TIMESTAMPTZ"
                    remarks="Дата создания версии">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_poll_version_poll_id"
                                 baseTableName="poll_version"
                                 baseColumnNames="poll_id"
                                 referencedTableName="poll"
                                 referencedColumnNames="poll_id"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="2025-01-14-03" author="p.vydysh">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="available_answer"/>
            </not>
        </preConditions>
        <createTable tableName="available_answer"
                     remarks="Информация о вариантах ответа">
            <column name="available_answer_id"
                    type="UUID"
                    remarks="Идентификатор варианта ответа">
                <constraints primaryKey="true"/>
            </column>

            <column name="poll_version_id"
                    type="UUID"
                    remarks="Идентификатор версии опроса">
                <constraints nullable="false"/>
            </column>

            <column name="title"
                    type="TEXT"
                    remarks="Заголовок варианта ответа">
                <constraints nullable="false"/>
            </column>

            <column name="position"
                    type="INTEGER"
                    remarks="Позиция варианта ответа">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_available_answer_poll_id"
                                 baseTableName="available_answer"
                                 baseColumnNames="poll_version_id"
                                 referencedTableName="poll_version"
                                 referencedColumnNames="poll_version_id"
                                 onUpdate="CASCADE"
                                 onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
